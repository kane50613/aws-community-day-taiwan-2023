---
import { cn, containerStyle } from "../lib/utils";
import { IconArrowRight } from "@tabler/icons-react";
---

<div
	id="events"
	style={{
		background:
			"linear-gradient(135deg, #252525 0%, #373737 0.01%, #232323 100%)",
	}}
	class="py-12 md:py-16 scroll-mt-16"
>
	<div class={cn(containerStyle, "flex flex-col gap-8")}>
		<div class="flex justify-between">
			<h2 class="font-bold text-2xl md:text-3xl leading-snug text-white">
				活動議程
			</h2>
			<IconArrowRight
				color="white"
				stroke="1.25"
				width="36"
				height="36"
			/>
		</div>
		<span class="text-gray-100">精彩議程即將公開，敬請期待</span>
	</div>
</div>
